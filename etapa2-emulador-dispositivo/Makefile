# Nome do execut√°vel
TARGET = Main.exe

# Arquivos fonte
SRC = main.c lorawan.c aes_cmac.c config.c

# Compilador (ajustado para seu caminho no MSYS2)
CC = /c/msys64/mingw64/bin/gcc.exe

# Flags de compila√ß√£o
CFLAGS = -fdiagnostics-color=always -g

# Diret√≥rios de inclus√£o e bibliotecas
INCLUDES = -I/c/msys64/mingw64/include

# Diret√≥rios de linkagem
LDFLAGS = -L/c/msys64/mingw64/lib

# Bibliotecas para linkagem (üö® aqui adicionamos -lcjson)
LIBS = -lmbedtls -lmbedcrypto -lmbedx509 -lcurl -lcjson

# Regra padr√£o
all: $(TARGET)

# Regra de compila√ß√£o
$(TARGET): $(SRC)
	$(CC) $(CFLAGS) $(INCLUDES) $(SRC) -o $(TARGET) $(LDFLAGS) $(LIBS)

# Limpeza dos arquivos gerados
clean:
	rm -f $(TARGET)
